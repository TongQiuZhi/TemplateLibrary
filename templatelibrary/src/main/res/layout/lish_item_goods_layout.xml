<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#ffffffff"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/goods_icon"
        android:layout_width="172dp"
        android:layout_height="172dp" />

    <TextView
        android:id="@+id/goods_dec"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="goods_dec" />

    <TextView
        android:id="@+id/goods_sub_dec"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="goods_sub_dec" />

    <TextView
        android:id="@+id/goods_sub_dec2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="goods_sub_dec2" />

    <TextView
        android:id="@+id/goods_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="goods_btn" />

</LinearLayout>